<Window x:Class="TrafficRulesTrainer.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficRulesTrainer"
        mc:Ignorable="d"
        Title="ПДД тест авторизация" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Имя пользователя" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right"/>
        <TextBox x:Name="LoginBox" Grid.Row="1" Grid.Column="1" Margin="2"/>
        <Label Content="Пароль" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Margin="2"/>
        <Button x:Name="LoginBtn" Content="Войти" Grid.Row="3" Grid.Column="1" Width="70" Margin="18" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Click="LoginBtn_Click"/>
    </Grid>
</Window>
