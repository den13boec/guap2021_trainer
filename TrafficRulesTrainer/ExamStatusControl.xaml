<UserControl x:Class="TrafficRulesTrainer.ExamStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrafficRulesTrainer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <StackPanel>
            <Grid x:Name="QuestionsTable" Margin="4" MinHeight="200"/>
            <Label x:Name="AnswersCountLabel" HorizontalAlignment="Center" Margin="4"/>
            <Label x:Name="TimeLeft" Margin="4"/>
            <Button x:Name="QuitButton" Content="Выйти" Margin="4" Width="100"/>
        </StackPanel>
    </Grid>
</UserControl>
