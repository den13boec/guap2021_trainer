<UserControl x:Class="TrafficRulesTrainer.QuestionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrafficRulesTrainer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Image x:Name="QuestionImage"/>
            <Label x:Name="QuestionLabel" Margin="8"/>
            <ListBox x:Name="AnswerVariants"/>
            <Button x:Name="SkipQuesionButton" DockPanel.Dock="Right" Width="100" Content="Пропустить" Margin="8" HorizontalAlignment="Right"/>
            <Label x:Name="AnswerExplanationLabel" Margin="8"/>
        </StackPanel>
    </Grid>
</UserControl>